<%- include('partials/header') %> 

    <div class="container">
        <div class="mb-5 text-center">
            <h1><i class="fas fa-cat mr-1"></i>Cat Gallery</h1>
        </div>
        <div class="row">
            <img class="col-md-4 offset-4" src="<%= randomCat.url %> " alt="">
        </div>
        <div class="d-flex justify-content-center mt-4">
            <form action="/upvote/<%=randomCat._id%>?method=PUT" method="POST">
                <button class="btn btn-success mr-4"><i class="fas fa-thumbs-up mr-1"></i>Upvote</button>
            </form>
            <form action="/downvote/<%=randomCat._id%>?method=PUT" method="POST">
                <button class="btn btn-danger ml-4"><i class="fas fa-thumbs-down mr-1"></i>Downvote</button>
            </form>
        </div>
        <div class="mt-4">
            <div class="text-center">
                <h2>Your Upvoted Cats<i class="fas fa-level-down-alt ml-2 text-success"></i></h2>
            </div>
            <% upVoted.forEach((vote) => { %>
                <img class="col-md-4 offset-4" src=<%= vote.url %> alt="">
            <% }); %> 
        </div>
    </div>

<%- include('partials/footer') %>     